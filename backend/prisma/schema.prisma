generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int              @id @default(autoincrement())
  email       String           @unique
  username    String
  password    String
  isAdmin     Boolean          @default(false)
  profile     Profile?
  savedPlaces UserSavedPlace[]
  reviews     Review[]
  trips       Trip[]
}

model Profile {
  id                Int     @id @default(autoincrement())
  userId            Int     @unique
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio               String
  currentlyVisiting String?
}

model Place {
  id      String @id @default(cuid())
  placeId String @unique
  lat     Float
  lng     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cache   GooglePlaceCache?
  saves   UserSavedPlace[]
  reviews Review[]

  @@index([placeId])
}

model GooglePlaceCache {
  id String @id @default(cuid())

  placeId          String  @unique
  formattedAddress String?
  addressJson      Json?
  types            Json?
  plusCode         Json?
  viewport         Json?

  fetchedAt DateTime @default(now())

  place Place @relation(fields: [placeId], references: [placeId], onDelete: Cascade)

  @@index([fetchedAt])
}

model Trip {
  id      String  @id @default(cuid())
  userId  Int
  name    String  @default("My Trip")
  city    String?
  Country String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedPlaces UserSavedPlace[]

  @@index([userId])
}

model UserSavedPlace {
  id String @id @default(cuid())

  userId    Int
  placeId   String
  tripId    String
  status    Status    @default(WISHLIST)
  userNotes String?
  visitedAt DateTime? // Timestamp when status changed to VISITED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  place Place @relation(fields: [placeId], references: [placeId], onDelete: Cascade)
  trip  Trip  @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@unique([userId, placeId])
  @@index([userId])
  @@index([placeId])
  @@index([status])
  @@index([visitedAt])
}

model Review {
  id String @id @default(cuid())

  userId  Int
  placeId String

  rating  Int // 1-5 stars
  comment String // Review text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  place Place @relation(fields: [placeId], references: [placeId], onDelete: Cascade)

  @@unique([userId, placeId]) // One review per user per place
  @@index([userId])
  @@index([placeId])
  @@index([rating]) // For filtering by rating
}

enum Status {
  WISHLIST
  VISITED
  SKIPPED
}
