generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int              @id @default(autoincrement())
  email       String           @unique
  username    String
  password    String
  isAdmin     Boolean          @default(false)
  profile     Profile?
  savedPlaces UserSavedPlace[]
}

model Profile {
  id                Int     @id @default(autoincrement())
  userId            Int     @unique
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio               String
  currentlyVisiting String?
}

model Place {
  id      String @id @default(cuid())
  placeId String @unique
  lat     Float
  lng     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cache GooglePlaceCache?
  saves UserSavedPlace[]

  @@index([placeId])
}

model GooglePlaceCache {
  id String @id @default(cuid())

  placeId          String  @unique
  formattedAddress String?
  addressJson      Json?
  types            Json?
  plusCode         Json?
  viewport         Json?

  fetchedAt DateTime @default(now())

  place Place @relation(fields: [placeId], references: [placeId], onDelete: Cascade)

  @@index([fetchedAt])
}

model UserSavedPlace {
  id String @id @default(cuid())

  userId  Int
  placeId String

  userNotes String?

  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  place     Place    @relation(fields: [placeId], references: [placeId], onDelete: Cascade)

  @@unique([userId, placeId])
  @@index([userId])
  @@index([placeId])
}
